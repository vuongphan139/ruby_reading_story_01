<div class="row pt-4 pb-5">
  <h3 class="m-auto" ><%= t ".sign_in" %></h3>
</div>
<div class="row" id="background_font">
  <%= form_for :session, url: signin_path, html: {class: "col-12"} do |f| %>
    <%= f.label :email, class: "mt-2" %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password, class: "mt-2" %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.submit t(".sign_in"), class: "btn btn-primary mt-3 mb-5" %>
  <% end %>    
</div>
