<% provide :button_text, t("update_story") %>
<div class="row pt-4 pb-5">
  <h3 class="m-auto"><%= t "edit_story" %></h3>
</div>
<div class="row">
    <%= bootstrap_form_for @story, html: {class: "col-12"}, remote: true do |f| %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.text_field :author_name, class: "form-control" %>
      <%= f.select :progress, progress_select_value_helper,
        class: "form-control" if @story.progress == 0 %><br/>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br/>
      <%= f.file_field :cover_image, accept: "image/jpeg,image/gif,image/png", id: "avatar-upload" %><br/>
      <%= image_tag f.object.cover_image.url, class: "img-thumbnail mb-4", id: "img_prev", alt: "image preview" %><br/>
      <%= f.label :description %>
      <%= f.cktext_area :description, class: "form-control" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary mt-3 mb-5" %>
    <% end %>
</div>
