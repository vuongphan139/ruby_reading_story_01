<% provide :title, @title %>
<div class="row" id="background_font">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("view_my_profile"), @user %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: Settings.size_show_follow), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>
