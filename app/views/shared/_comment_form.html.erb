<%= bootstrap_form_with model: @comment do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= hidden_field_tag :story_id, @story.id %>
  <%= f.text_area :content, hide_label: true, placeholder: t("enter_content"), class: "form-control" %>
  <%= f.submit t("comment"), class: "btn btn-primary", remote: true %>
<% end %>
