<h4 class="text-center my-4"><%= t ".manager_category" %></h4>
<%= bootstrap_form_for @category, html: {class: "col-12"}, remote: true do |f| %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.text_area :description, class: "form-control" %>
  <%= f.submit t(".add_category"), class: "btn btn-primary mt-3 mb-5" %>
<% end %>
<table class="table" id="background_font">
  <thead>
    <tr>
      <th><%= t ".category_name" %></th>
      <th><%= t ".description" %></th>
      <th><%= t ".action" %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td colspan="2"></td>
      <td>
        <%= link_to t(".add_category"), "#",
          class: "btn btn-primary", role: "button", remote: true %>
      </td>
    </tr>
    <%= render @categories %>
  </tbody>
</table>
<%= paginate @categories %>
